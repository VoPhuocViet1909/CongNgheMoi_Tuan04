<div class="panel">
  <div class="panel__head">
    <h2>
      <%= mode === 'create' ? '➕ Thêm danh mục mới' : '✏️ Chỉnh sửa danh mục'
      %>
    </h2>
    <a href="/categories" class="btn ghost">← Quay lại</a>
  </div>

  <form
    action="<%= mode === 'create' ? '/categories' : `/categories/${category.categoryId}?_method=PUT` %>"
    method="POST"
    class="form"
  >
    <div class="field">
      <label for="name"
        >Tên danh mục <span style="color: var(--accent-2)">*</span></label
      >
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="Nhập tên danh mục..."
        value="<%= category ? category.name : '' %>"
      />
    </div>

    <div class="field">
      <label for="description">Mô tả</label>
      <textarea
        id="description"
        name="description"
        rows="4"
        placeholder="Nhập mô tả danh mục..."
        style="resize: vertical; font-family: inherit"
      >
<%= category ? (category.description || '') : '' %></textarea
      >
    </div>

    <div class="actions">
      <button type="submit" class="btn solid">
        <%= mode === 'create' ? '✅ Thêm danh mục' : '✅ Cập nhật danh mục' %>
      </button>
      <a href="/categories" class="link">Hủy</a>
    </div>
  </form>
</div>
